$( document ).ready(function () {window.location.reload()});
$("#managing_table").html("<%= escape_javascript(render :partial => "managing_table") %>");

$(":input").change(function() {
  var vac_id = $(this).attr('id')
  var vol_id = $(this).val()
  $.ajax({
    type: "POST",
    url: '/admin/vacancies/' + vac_id + '/add_volunteer?volunteer_id=' + vol_id,
    remote: "true"
  });
});