- if user_signed_in?
  .btn-group.navbar-btn.pull-right
    = button_tag content_tag(:i, " ", class: "fa fa-user") + " #{current_user.first_name} " + content_tag(:span, " ", class: "caret"), type: 'button', data: {"toggle" => "dropdown"}, :class => "btn btn-default dropdown-toggle"
    %ul.dropdown-menu
      %li
        = link_to "Профиль", edit_user_registration_path
      %li.divider
      %li
        = link_to "Выход", destroy_user_session_path, method: :delete
  - if current_user.admin?
    .btn-group.navbar-btn.pull-right
      = link_to "Новые сообщения (#{Message.new_for_admin.count || 0})", admin_messages_path, class: "btn #{Message.new_for_admin.count > 0 ? 'attention' : 'btn-default'}"
  - else
    .btn-group.navbar-btn.pull-right
      = link_to "Новые сообщения (#{Message.new_for_user(current_user).count || 0})", messages_path, class: "btn #{Message.new_for_user(current_user).count > 0 ? 'attention' : 'btn-default'}"







